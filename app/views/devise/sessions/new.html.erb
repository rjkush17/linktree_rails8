<main class="flex items-center justify-center my-32">
  <div class="w-6/12 bg-gray-300 rounded-xl p-8">
<h2 class="text-3xl font-bold mb-6 flex">Log in Here</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field my-4 w-64">
    <%= f.label :email, class: 'label-primary' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "input-primary" %>
  </div>

  <div class="field my-4 w-64">
    <%= f.label :password, class: "label-primary" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input-primary"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-8 flex gap-6">
    <%= f.submit "Log in", class: 'btn-primary' %>
     <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn-primary' %>
  </div>
<% end %>
 

  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "underline" %><br />

<%# <%= render "devise/shared/links" %>

</div>
</main>