<main class="flex items-center justify-center my-32">
  <div class="w-6/12 bg-gray-300 rounded-xl p-8">
    <h2 class="text-3xl font-bold mb-6 flex">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field my-4 w-64">
        <%= f.label :email, class: "label-primary" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-primary" %>
      </div>
      <div class="field my-4 w-64">
        <%= f.label :password, class: "label-primary" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-primary" %>
      </div>
      <div class="field my-4 w-64" >
        <%= f.label :password_confirmation, class: "label-primary" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "input-primary"  %>
      </div>
      <div class="actions my-8 flex gap-6">
        <%= f.submit "Sign up", class: 'btn-primary' %>
          <%= link_to "Log in", new_session_path(resource_name), class: 'btn-primary' %><br />

      </div>
    <% end %>
  </div>
</main>