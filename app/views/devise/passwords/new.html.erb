<main class="flex items-center justify-center my-32">
  <div class="w-6/12 bg-gray-300 rounded-xl p-8">
    <h2 class="text-3xl font-bold mb-6 flex">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field my-4 w-64">
        <%= f.label :email, class: "label-primary"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "input-primary" %>
      </div>
      <div class="actions my-8 flex gap-6">
        <%= f.submit "Send me reset password instructions", class: 'btn-primary'  %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</main>